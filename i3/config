}

# 快速锁屏
bindsym $mod+Control+l mode "i3lock: Return to lock/Escape to Cancel"
mode "i3lock: Return to lock/Escape to Cancel" {
        bindsym Return mode "default" exec i3lock -c 000000
        bindsym Escape mode "default"
}

